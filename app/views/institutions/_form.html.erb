<div class="col-sm-10">
  <%= form_for @institution, :html => {class: "form-horizontal"} do |f| %>

    <div class="form-group">
      <%= f.label :name, "Name", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :contact_name, "Contact Name", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :contact_name, class: "form-control", placeholder: "Contact Name" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :phone, "Phone", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :phone, class: "form-control", placeholder: "Phone" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, "Email", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :address_1, "Address 1", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :address_1, class: "form-control", placeholder: "Address 1" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :address_2, "Address 2", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :address_2, class: "form-control", placeholder: "Address 2" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :city, "City", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :city, class: "form-control", placeholder: "City" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :state, "State", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :state, class: "form-control", placeholder: "State" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :postal_code, "Postal Code", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :postal_code, class: "form-control", placeholder: "Postal Code" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :country, "Country", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :country, class: "form-control", placeholder: "Country" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :website, "Website", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :website, class: "form-control", placeholder: "Website" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :company_type, "Company Type", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select :company_type, ["Library","Institution"], {}, { class: "form-control"} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, "Description", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :description, class: "form-control", placeholder: "Institution Description" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "#{@institution.new_record? ? 'Create' : 'Update'}", :class => "btn btn-primary" %>
        <%= link_to "Cancel", institutions_path %>
      </div>
    </div>

  <% end %>
</div>
