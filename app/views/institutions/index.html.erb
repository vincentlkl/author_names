<div class="col-lg-12">
	<h1>Institutions</h1>

	<% if current_user.try(:superadmin?) %>
		<p><%= link_to("Add New Institution", new_institution_path ) %></p>
	<% end %>
  <div class="table-responsive">
		<table id="libraries-table" class="table table-striped table-hover tablesorter">
			<thead>
			  <tr>
				<th>Name</th>
				<th>Actions</th>
			  </tr>
			</thead>
			<tbody>
		    <% @institutions.each do |institution| %>
		    	<tr>
			  	  <td><%= institution.name %></td>
					  <td>
							<%= link_to('View', institution_path(institution)) %>
					    	<% if current_user.try(:superadmin?) %>
					 			| <%= link_to('Edit', edit_institution_path(institution), :class => "action-edit") %> | <%= link_to('Delete', institution_path(institution), :confirm => "Are you sure?", :method => :delete) %>
					  	  <% end %>
					  </td>
		    	</tr>
		    <% end %>
			</tbody>
		</table>
  </div>
  <%= render :partial => '/shared/tablesorter_pager', :locals => {:pager_id => "libraries-table" } %>
</div>
