<div class="col-sm-10">
  <%= form_for @user, :html => {class: "form-horizontal"} do |f| %>

    <div class="form-group">
      <%= f.label :email, "Email", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.email_field :email, class: "form-control", placeholder: "Name" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "#{@user.new_record? ? 'Create' : 'Update'}", :class => "btn btn-primary" %>
        <%= link_to "Cancel", users_path %>
      </div>
    </div>

  <% end %>
</div>
