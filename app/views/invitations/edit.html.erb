<h2><%= t 'devise.invitations.edit.header' %></h2>
<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :invitation_token %>

  <div class="row">
    <div class="col-sm-6">
      <p><strong>Email</strong></p>
      <p><%= resource.email %></p>
      <br/>

      <p><%= f.label :password %><br />
      <%= f.password_field :password, :class => "form-control" %></p>

      <p><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, :class => "form-control" %></p>

      <% if resource.institution.present? %>
        You are invited to <%= resource.institution.name %>.
      <% else %>
        <%= f.label "institution[name]", "Institution Name" %>
        <p>
          <%= text_field_tag "institution[name]", nil, placeholder: "Institution Name", :class => "form-control" %>
        </p>

        <%= f.label "institution[decription]", "Institution Description" %>
        <p>
          <%= text_area_tag "institution[decription]", nil, placeholder: "Institution Description", :class => "form-control" %>
        </p>

      <% end %>

      <p><%= f.submit t("devise.invitations.edit.submit_button"), :class => "btn btn-primary" %></p>
    </div>
  </div>
<% end %>
