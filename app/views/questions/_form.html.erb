<div class="col-sm-10">
  <%= form_for @question, :html => {class: "form-horizontal"} do |f| %>

    <div class="form-group">
      <%= f.label :name, "Name", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :name, "Type", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :question_type, class: "form-control", placeholder: "Type" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "#{@question.new_record? ? 'Create' : 'Update'}", :class => "btn btn-primary" %>
        <%= link_to "Cancel", questions_path %>
      </div>
    </div>

  <% end %>
</div>
